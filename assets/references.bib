}

@Article{Grimmer2013,
  author       = {Justin Grimmer},
  date         = {2013},
  journaltitle = {American Journal of Political Science},
  title        = {Appropriators not Position Takers: The DistortingEffects of Electoral Incentives on CongressionalRepresentation},
  issue        = {3},
  pages        = {624–642},
